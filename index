        function renderSentences(filter) {
            const list = document.getElementById('sentenceList');
            list.innerHTML = '';
            const filtered = data.filter(item => item.cat === filter);
            
            filtered.forEach(item => {
                const div = document.createElement('div');
                div.className = 'sentence-card';
                div.innerHTML = `
                    <div class="text-group">
                        <span class="en">${item.en}</span>
                        <span class="th">${item.th}</span>
                    </div>
                    <button class="play-btn" onclick="speak('${item.en}')">ðŸ”Š</button>
                `;
                list.appendChild(div);
            });
        }

        function filterCategory(cat) {
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            renderSentences(cat);
        }

        function speak(text) {
            const msg = new SpeechSynthesisUtterance();
            msg.text = text;
            msg.lang = 'en-AU'; // à¸•à¸±à¹‰à¸‡à¹€à¸›à¹‡à¸™à¸ªà¸³à¹€à¸™à¸µà¸¢à¸‡à¸­à¸­à¸ªà¹€à¸•à¸£à¹€à¸¥à¸µà¸¢
            window.speechSynthesis.speak(msg);
        }

        // Initial render
        renderSentences('greeting');
    </script>
